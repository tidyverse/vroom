#!/bin/bash
set -uo pipefail

# test-vroom-files - Test vroom CLI against a collection of CSV files
#
# Usage: ./scripts/test-vroom-files [--verbose]

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
VROOM="${REPO_ROOT}/build/vroom"

VERBOSE=false
[[ "${1:-}" == "--verbose" ]] && VERBOSE=true

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m'

# Counters
TOTAL=0
PASSED=0
FAILED=0
WARNINGS=0
FAILURES=""

# Check vroom exists
if [[ ! -x "$VROOM" ]]; then
    echo "Error: vroom not found at $VROOM"
    exit 1
fi

echo "vroom CLI Test Suite"
echo "==================="
echo "vroom: $VROOM"
echo "Version: $($VROOM --version 2>&1)"
echo ""

# Build file list
FILES=$(find "${REPO_ROOT}/test/data" -name "*.csv" -type f 2>/dev/null)
FILES="$FILES
$(ls /usr/share/distro-info/*.csv 2>/dev/null || true)
$(ls /usr/share/doc/gawk/examples/misc/*.csv 2>/dev/null || true)"

# Include CSV_Wrangling test data if available (all files)
if [[ -d /tmp/CSV_Wrangling/data/github ]]; then
    FILES="$FILES
$(find /tmp/CSV_Wrangling/data/github -name "*.csv" -type f 2>/dev/null)"
fi

if [[ -d /tmp/CSV_Wrangling/data/ukdata ]]; then
    FILES="$FILES
$(find /tmp/CSV_Wrangling/data/ukdata -name "*.csv" -type f 2>/dev/null)"
fi

# Include additional corpus if available
if [[ -d /tmp/csv_corpus ]]; then
    FILES="$FILES
$(find /tmp/csv_corpus -name "*.csv" -type f 2>/dev/null)"
fi

FILE_COUNT=$(echo "$FILES" | grep -c . || echo 0)
echo "Found $FILE_COUNT CSV files"
echo ""
echo "Running tests..."
$VERBOSE || echo -n "Progress: "

# Test commands (only valid vroom commands)
CMDS="head:-n:5
tail:-n:5
dialect
sample:-n:3
count
info
pretty:-n:5"

while IFS= read -r file; do
    [[ -z "$file" || ! -f "$file" ]] && continue

    $VERBOSE && echo "Testing: $file"

    file_failed=0

    while IFS= read -r cmd_line; do
        [[ -z "$cmd_line" ]] && continue

        # Split on : to get command and args
        IFS=':' read -ra parts <<< "$cmd_line"
        cmd_name="${parts[0]}"
        args=("${parts[@]:1}")

        TOTAL=$((TOTAL + 1))

        # Run test with timeout (command name first, then args, then file)
        # Capture stdout and stderr separately to avoid false positives from CSV content
        tmpfile="/tmp/vroom_test_$$"
        stderrfile="/tmp/vroom_test_stderr_$$"
        timeout 10 "$VROOM" "$cmd_name" "${args[@]}" "$file" >"$tmpfile" 2>"$stderrfile" || exit_code=$?
        exit_code=${exit_code:-0}

        if [[ $exit_code -gt 128 ]]; then
            # Crash (signal)
            sig=$((exit_code - 128))
            echo -e "\n${RED}CRASH${NC}: $cmd_name on $(basename "$file")"
            echo "  Signal: $sig"
            echo "  File: $file"
            FAILED=$((FAILED + 1))
            file_failed=$((file_failed + 1))
            FAILURES="$FAILURES  - $cmd_name: $file (signal $sig)\n"
        elif [[ $exit_code -eq 124 ]]; then
            # Timeout
            $VERBOSE && echo -e "${YELLOW}TIMEOUT${NC}: $cmd_name"
            WARNINGS=$((WARNINGS + 1))
        elif grep -qi "segmentation fault\|core dumped\|SIGSEGV\|SIGABRT" "$stderrfile" 2>/dev/null; then
            # Only check stderr for crash indicators to avoid false positives from CSV content
            echo -e "\n${RED}CRASH${NC}: $cmd_name on $(basename "$file") (crash indicator in stderr)"
            FAILED=$((FAILED + 1))
            file_failed=$((file_failed + 1))
            FAILURES="$FAILURES  - $cmd_name: $file (crash)\n"
        elif [[ $exit_code -ne 0 ]]; then
            # Non-zero exit (expected for malformed)
            $VERBOSE && echo -e "${YELLOW}WARN${NC}: $cmd_name exit $exit_code"
            WARNINGS=$((WARNINGS + 1))
        else
            PASSED=$((PASSED + 1))
        fi

        rm -f "$tmpfile" "$stderrfile"
        exit_code=0
    done <<< "$CMDS"

    $VERBOSE || { [[ $file_failed -gt 0 ]] && echo -ne "${RED}X${NC}" || echo -n "."; }
done <<< "$FILES"

$VERBOSE || echo ""
echo ""
echo "==================="
echo "Results Summary"
echo "==================="
echo "Total: $TOTAL"
echo -e "${GREEN}Passed${NC}: $PASSED"
echo -e "${YELLOW}Warnings${NC}: $WARNINGS"
echo -e "${RED}Failed${NC}: $FAILED"

if [[ $FAILED -gt 0 ]]; then
    echo ""
    echo "Failures:"
    echo -e "$FAILURES"
    exit 1
fi

echo -e "\n${GREEN}All tests passed!${NC}"
